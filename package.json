{
  "name": "masq-app",
  "description": "masq-app by Qwant",
  "author": "Qwant",
  "license": "MIT",
  "version": "0.1.0",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "npm run electron-dev",
    "electron-dev": "ENV=development concurrently \"BROWSER=none react-app-rewired start\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test --env=jsdom",
    "eject": "react-scripts eject",
    "standard": "standard \"src/**/*.js\"",
    "standard-fix": "standard --fix \"src/**/*.js\"",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "dependencies": {
    "localforage": "^1.7.1",
    "masq-socket": "git+https://github.com/QwantResearch/masq-socket.git",
    "masq-store": "git+https://github.com/QwantResearch/masq-store.git",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-responsive": "^4.1.0",
    "react-router-dom": "^4.2.2",
    "react-scripts": "^2.0.0-next.66cc7a90",
    "typeface-asap": "0.0.54"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.4.3",
    "@storybook/addon-info": "^3.4.3",
    "@storybook/addon-links": "^3.4.3",
    "@storybook/addon-storyshots": "^3.4.3",
    "@storybook/addons": "^3.4.3",
    "@storybook/react": "^3.4.3",
    "concurrently": "^3.5.1",
    "electron": "^2.0.0",
    "electron-builder": "^20.11.1",
    "react-app-rewired": "^2.0.0",
    "react-test-renderer": "^16.3.2",
    "standard": "^11.0.1",
    "wait-on": "^2.1.0"
  },
  "browserslist": [
    "Electron >= 2.0.0"
  ],
  "build": {
    "appId": "masq-app",
    "directories": {
      "buildResources": "res"
    },
    "publish": ["github"],
    "linux": {
      "target": [
        {
          "target": "tar.xz",
          "arch": ["x64"]
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ]
    },
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
  }
}
